{% extends 'AppBundle::page.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block underTitle %}
    <div class="mx-3 mb-3">
        <h5 class="text-uppercase elziregreen">
            {{ categorie }}
        </h5>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid px-5 mx-auto mb-5">

        <div class="row mb-5">

        {% for illustration in illustrations %}

            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-5">
                <a href="{{ illustration["url"] }}" class="img-link">
                    <img class="img-fluid" src="{{ asset(illustration["image"]) }}"/>
                    <div>{{ illustration["name"] }}</div>
                </a>
            </div>
                
        {% endfor %}

        </div>

    </div>
{% endblock %}

{% block other %}
{% endblock %}
