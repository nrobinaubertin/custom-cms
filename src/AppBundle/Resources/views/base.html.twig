<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Elzire{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>

        {% block javascripts %}
            {% javascripts 
                '@AppBundle/Resources/public/js/init/*.js' 
                '@AppBundle/Resources/public/js/*.js' 
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        
        {% block stylesheets %}
			{% stylesheets 
				filter="scssphp" 
				output="css/f.css"
				'@AppBundle/Resources/public/fontawesome/scss/font-awesome.scss'
			%}
				<link rel="stylesheet" href="{{ asset_url }}" />
			{% endstylesheets %}
			
            {% stylesheets 
				filter="scssphp" 
				output="scss/style.css"
				'@AppBundle/Resources/public/scss/*.scss'
			%}
				<link rel="stylesheet" href="{{ asset_url }}" />
			{% endstylesheets %}

            {% stylesheets 
                '@AppBundle/Resources/public/css/*.css' 
                filter="cssrewrite"
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}

        {% endblock %}

        {% block fonts %}
            <style>
                @font-face {
                  font-family: "Roboto";
                  src: url("{{ asset('assets/roboto.woff') }}");
                }
                @font-face {
                  font-family: "Freestyle";
                  src: url("{{ asset('assets/freestyle.woff') }}");
                }
            </style>
        {% endblock %}
    
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
