{% extends 'AppBundle::page.html.twig' %}

{% block head_javascript %}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block contentHeader %}
    <div class="container-fluid mb-1">
        <div class="row justify-content-center">
            <div class="col-60">

                {% block breadcrumbs %}
                <nav class="breadcrumb px-0">
                    {% for breadcrumb in breadcrumbs %}
                    {% if loop.last %}
                    <span class="breadcrumb-item active">{{ breadcrumb[1] }}</span>
                    {% else %}
                    <a class="breadcrumb-item" href="{{ breadcrumb[0] }}">{{ breadcrumb[1] }}</a>
                    {% endif %}
                    {% endfor %}
                </nav>
                {% endblock %}

                {% block underTitle %}
                <div class="w-25 green-separator mb-3"></div>
                <div class="mb-3">
                <h2 class="roboto-thin">
                    {{ title }}
                </h2>
                </div>
                {% endblock %}

            </div>
        </div>
    </div>
    {% endblock %}

{% block content %}
<div class="container-fluid">
    {% if email_sent == false %}
        <form id="contactForm" method="post" action="/send">
            <div class="form-group">
                <label for="sender">Votre email :</label>
                <input type="email" class="form-control" name="sender" placeholder="Indiquez votre adresse mail ici" required>
            </div>
            <div class="form-group">
                <label for="message">Votre message :</label>
                <textarea class="form-control" name="message" rows="4" placeholder="Ecrivez votre message ici" required></textarea>
            </div>
            <button
                class="btn btn-primary g-recaptcha"
                data-sitekey="{{ g_recaptcha_key }}"
                data-callback="submitContactForm">
                Envoyer
            </button>
        </form>
    {% else %}
        {% if success == 1 %}
            <p>Message envoy√© !</p>
        {% else %}
            <p>Une erreur s'est produite.</p>
        {% endif %}
    {% endif %}
</div>
{% endblock %}

{% block end_body %}
<script>
    function submitContactForm() {
        document.getElementById("contactForm").submit();
    }
</script>
{% endblock %}
